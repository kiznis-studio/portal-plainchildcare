---
import Base from '../layouts/Base.astro';
import { getAllStates, getNationalStats } from '../lib/db';

const db = Astro.locals.runtime.env.DB;
const stats = await getNationalStats(db);
const states = await getAllStates(db);

const datasetSchema = {
  "@context": "https://schema.org",
  "@type": "Dataset",
  "name": "U.S. Childcare Costs by County and State",
  "description": "Department of Labor childcare cost data for 3,200+ counties and 45 states, including infant, toddler, and preschool center-based care costs.",
  "url": "https://plainchildcare.com",
  "keywords": ["childcare costs", "daycare prices", "DOL childcare data", "infant care costs", "US childcare"],
  "creator": {
    "@type": "Organization",
    "name": "PlainChildcare"
  },
  "spatialCoverage": "United States",
  "temporalCoverage": "2023/2024",
  "license": "https://creativecommons.org/publicdomain/zero/1.0/",
  "isAccessibleForFree": true,
  "distribution": {
    "@type": "DataDownload",
    "encodingFormat": "text/html",
    "contentUrl": "https://plainchildcare.com"
  }
};
---

<Base
  title="PlainChildcare â€” Childcare Costs by County Across America"
  description="Free childcare cost data for every U.S. county. Compare center-based and family childcare prices by age group, state, and affordability."
>
  <section class="max-w-6xl mx-auto px-4 py-12 md:py-16">
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Childcare Costs<br class="sm:hidden"/> Across America</h1>
      <p class="text-lg text-[var(--color-text-secondary)] max-w-2xl mx-auto">
        Free access to childcare prices for every U.S. county. Compare center-based and family care costs by age group.
      </p>
      <form action="/search" method="get" class="mt-8 max-w-md mx-auto">
        <div class="relative">
          <input
            type="text"
            name="q"
            placeholder="Search by county, city, or state..."
            class="w-full h-12 pl-12 pr-4 text-base rounded-xl border border-[var(--color-border)] bg-[var(--color-surface)] text-[var(--color-text)] placeholder-[var(--color-text-secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] focus:border-transparent"
          />
          <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-[var(--color-text-secondary)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </div>
      </form>
    </div>

    {stats && (
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12">
        <div class="bg-[var(--color-surface)] border border-[var(--color-border)] rounded-xl p-4 text-center">
          <div class="text-2xl font-bold text-[var(--color-primary)]">{stats.county_count?.toLocaleString()}</div>
          <div class="text-sm text-[var(--color-text-secondary)]">Counties</div>
        </div>
        <div class="bg-[var(--color-surface)] border border-[var(--color-border)] rounded-xl p-4 text-center">
          <div class="text-2xl font-bold text-[var(--color-primary)]">{stats.state_count}</div>
          <div class="text-sm text-[var(--color-text-secondary)]">States</div>
        </div>
        <div class="bg-[var(--color-surface)] border border-[var(--color-border)] rounded-xl p-4 text-center">
          <div class="text-2xl font-bold text-[var(--color-primary)]">${stats.avg_center_infant ? Math.round(stats.avg_center_infant).toLocaleString() : 'N/A'}</div>
          <div class="text-sm text-[var(--color-text-secondary)]">Avg Infant (Center)</div>
        </div>
        <div class="bg-[var(--color-surface)] border border-[var(--color-border)] rounded-xl p-4 text-center">
          <div class="text-2xl font-bold text-[var(--color-primary)]">${stats.avg_center_preschool ? Math.round(stats.avg_center_preschool).toLocaleString() : 'N/A'}</div>
          <div class="text-sm text-[var(--color-text-secondary)]">Avg Preschool (Center)</div>
        </div>
      </div>
    )}

    <h2 class="text-2xl font-bold mb-6">Browse by State</h2>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3">
      {states.map(state => (
        <a href={`/state/${state.slug}`} class="flex items-center justify-between px-4 py-3 bg-[var(--color-surface)] border border-[var(--color-border)] rounded-lg hover:border-[var(--color-primary)] transition-colors">
          <span class="font-medium text-sm">{state.name}</span>
          <span class="text-xs text-[var(--color-text-secondary)]">{state.county_count}</span>
        </a>
      ))}
    </div>
  </section>

  <script type="application/ld+json" set:html={JSON.stringify(datasetSchema)} />
</Base>
