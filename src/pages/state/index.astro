---
import Base from '../../layouts/Base.astro';
import { getAllStates, formatCost } from '../../lib/db';

const db = Astro.locals.runtime.env.DB;
const states = await getAllStates(db);
---

<Base
  title="Childcare Costs by State"
  description="Compare average childcare costs across all U.S. states. See center-based and family childcare prices for infants, toddlers, and preschoolers."
  breadcrumbs={[{ name: 'Home', href: '/' }, { name: 'States' }]}
>
  <section class="max-w-6xl mx-auto px-4 py-8">
    <div class="mb-2 text-sm text-[var(--color-text-secondary)]">
      <a href="/" class="hover:text-[var(--color-primary)]">Home</a> /
    </div>
    <h1 class="text-2xl md:text-3xl font-bold mb-2">Childcare Costs by State</h1>
    <p class="text-[var(--color-text-secondary)] mb-6">{states.length} states with childcare cost data</p>

    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b border-[var(--color-border)] text-left text-[var(--color-text-secondary)]">
            <th class="pb-2 font-medium">State</th>
            <th class="pb-2 font-medium text-right">Avg Infant</th>
            <th class="pb-2 font-medium text-right hidden sm:table-cell">Avg Toddler</th>
            <th class="pb-2 font-medium text-right hidden md:table-cell">Avg Preschool</th>
            <th class="pb-2 font-medium text-right">Counties</th>
          </tr>
        </thead>
        <tbody>
          {states.map(state => (
            <tr class="border-b border-[var(--color-border)] hover:bg-[var(--color-surface)] transition-colors">
              <td class="py-3">
                <a href={`/state/${state.slug}`} class="text-[var(--color-primary)] hover:underline font-medium">{state.name}</a>
              </td>
              <td class="py-3 text-right">{formatCost(state.avg_center_infant)}</td>
              <td class="py-3 text-right hidden sm:table-cell">{formatCost(state.avg_center_toddler)}</td>
              <td class="py-3 text-right hidden md:table-cell">{formatCost(state.avg_center_preschool)}</td>
              <td class="py-3 text-right text-[var(--color-text-secondary)]">{state.county_count}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </section>
</Base>
